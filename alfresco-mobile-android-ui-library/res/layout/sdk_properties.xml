    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
            android:gravity="top"
       >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical" >

            <!-- HEADER -->

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/icon"
                    style="@style/list_item_icon"
                    android:layout_width="10dip"
                    android:layout_height="100dip"
                     android:contentDescription="@string/thumbnail_description"
                    android:src="@drawable/mime_file" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/toptext"
                        style="@style/list_item_toptext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                         />

                    <TextView
                        android:id="@+id/bottomtext"
                        style="@style/list_item_bottomtext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                         />
                </LinearLayout>

                <Button
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:gravity="center"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- ACTIONS -->

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dip"
                    android:background="@drawable/border"
                     >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/open_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_openin"
                            android:text="@string/action_open" />

                        <Button
                            android:id="@+id/display_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_menu_start_conversation"
                            android:text="@string/action_comments" />

                        <Button
                            android:id="@+id/display_all_versions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_menu_recent_history"
                            android:text="@string/action_versions" />
                        
                        <Button
                            android:id="@+id/like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_like"
                            />
                    </LinearLayout>
                </HorizontalScrollView>
            <!-- PREVIEW -->

            <LinearLayout
                android:id="@+id/preview_panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/preview"
                    style="@style/list_item_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/thumbnail_description"
                    android:src="@drawable/mime_file" />
            </LinearLayout>

            <!-- Description -->

            <TextView
                android:id="@+id/description_title"
                style="@style/list_item_toptext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_description" />

            <LinearLayout
                android:id="@+id/description_panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/description"
                    style="@style/list_item_toptext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="20"
                    />
            </LinearLayout>

            <!-- People -->

            <TextView
                style="@style/list_item_toptext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/people_title" />

            <include layout="@layout/sdk_properties_author" />

            <!-- Aspects -->

            <LinearLayout
                android:id="@+id/aspects_panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
